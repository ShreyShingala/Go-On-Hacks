{
  "manifest_version": 3,
  "name": "LeReplacer",
  "description": "We will swap all faces on any page with LeBron James. The GOAT!",
  "version": "0.1.0",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/logo.png",
    "32": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sunshine.jpg", 
        "lebrons/lebrontogo.jpg",
        "lebrons/lebron1.png",
        "lebrons/lebron2.png",
        "lebrons/lebron3.png",
        "lebrons/lebron4.png",
        "assets/milk.png",
        "assets/love.png",
        "camera.html",
        "camera.js",
        "camera.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Image Replacer",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo.png",
      "32": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  }
}

